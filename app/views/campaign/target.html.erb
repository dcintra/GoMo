<h1>Campaigns list</h1>

<% if @selected_account.nil? %>
  <div class="notice">No account selected!</div>

<% else %>

  <% if @targets.nil? or @targets.empty? %>
    <ul><li>No campaigns available.</ul>
  <% else %>
    <ul><li>Total number of campaigns: <%= @target_count %></ul>
    <table>
      <tr>
        <th>ID
        <th>Name
        <th>Status
    <% @targets.each do |id, target| %>
      <tr>
        <td><%= target.id %>
    <% end %>
    </table>
  <% end %>
<% end %>

<%= response %>
<div id="local-footer">
  <span class="small-print"><%= link_to("Back to home", home_index_path) %></span>
</div>